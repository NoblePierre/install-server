# === CONFIGURATION PTERODACTYL HYBRIDE ===

# Domaine du panel
PANEL_DOMAIN=panel.example.com

# Configuration de la base de donn√©es
DB_ROOT_PASSWORD=your_secure_root_password
DB_DATABASE=pterodactyl
DB_USERNAME=pterodactyl
DB_PASSWORD=your_secure_database_password

# Configuration email (requise pour les notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME=Pterodactyl

# Configuration Wings (installation native)
WINGS_BINARY=/usr/local/bin/wings
WINGS_CONFIG_DIR=/etc/pterodactyl

# Configuration SSL (optionnel)
SSL_CERT_PATH=/etc/letsencrypt/live/panel.example.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/panel.example.com/privkey.pem 